{% extends 'login.base.html.twig' %}

{% block title %}Registrieren{% endblock %}
{% block pageTitle %}Registrieren{% endblock %}
{% block desc %}Jetzt registrieren - um den Zugriff auf Tools zu erhalten - <a href="{{ path('app_login') }}">Login</a>{% endblock %}
{% block body %}
<div class="card">
    <div class="card-body">
        <div class="m-sm-4">

            {{ form_start(registrationForm, {'attr': {'class': 'user'}} ) }}
                <div class="mb-3">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        attr: {'class': 'form-control form-control-lg'}
                    }) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check'}}) }}
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">Registrieren</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
