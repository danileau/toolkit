
{% extends 'admin.base.html.twig' %}

{% block title %}ToolKit - User anzeigen{% endblock %}

{% block body %}
    <main class="content">
        <div class="container-fluid p-0">

            <div class="mb-3">
                <h1 class="h3 d-inline align-middle">User anzeigen</h1>
            </div>

            <div class="row">
                <div class="col-12 col-xl-12">
                    <div class="card">
                        <div class="card-header">

                        </div>
                        <div class="card-body">
                            <table id="datatables-reponsive" class="table table-striped" style="width:100%">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Geburtsdatum</th>
                                    <th>Rolle</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.birthdate|date('d.m.Y') }}</td>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                </tr>
                                </tbody>
                            </table>
                            <a href="{{ path('user_index') }}">Zurück zur Übersicht</a> {{ include('user/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>

{% endblock %}


